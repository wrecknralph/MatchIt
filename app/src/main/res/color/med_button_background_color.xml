<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#7c0a02 " />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#dc143c " />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#cc0000 " />
    <!--Default Background Color -->
    <item android:color="@android:color/holo_red_dark" />

</selector>